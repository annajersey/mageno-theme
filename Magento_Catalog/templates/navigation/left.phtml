					console.log(this);
					var id = $(this).attr('id').replace('child-show-', '');
					console.log(id);
					if (id) {
						$('.child-hidden-' + id).css('display', 'block');
					}
				});				
			});
		</script>
		</div>		
    </div>
	</div>
